html
  link(rel="stylesheet", href="/client/room.css")
  body
    div(id="roomID" hidden) #{roomID}
    div(id="sessionID" hidden) #{sessionID}
    div(id="roomContainer")
      div(id="messageContainer")
        div(class="screen")
        div(id="messageContent")
          div(class="banner")
          div(id="message")
          button(id="okButton") OK
      div(class="roomContent" id="matchContainer")
        div(id="matchContent")
          div(id="playerTurn")
          div(id="master")
          div(id="winners")
          div(id="table")
            div(id="playerData")
              div(class="player" id="player1" hidden)
                span(class="info" id="player1Name")
                span(class="info" id="player1Cards")
                span(class="info" id="player1Status")
              div(class="player" id="player2" hidden)
                span(class="info" id="player2Name")
                span(class="info" id="player2Cards")
                span(class="info" id="player2Status")
              div(class="player" id="player3" hidden)
                span(class="info" id="player3Name")
                span(class="info" id="player3Cards")
                span(class="info" id="player3Status")
              div(class="player" id="player4" hidden)
                span(class="info" id="player4Name")
                span(class="info" id="player4Cards")
                span(class="info" id="player4Status")
            div(id="pile")
              img(class="pileCard" src="/client/img/back.png")
              img(class="pileCard" src="/client/img/back.png")
        div(id="playerHandSet")
          div(id="selectedContainer")
            div(id="options")
              button(class="gameOption" id="ready") Ready
              button(class="gameOption" id="leaveRoom") Leave Room
              button(class="gameOption" id="submitHand") Submit
              button(class="gameOption" id="passTurn") Pass Turn
            div(id="selectedHand")
          div(id="view")
            img(id="cardDisplay" src="/client/img/back.png")
          div(id="playerHand")
      div(class="roomContent" id="roomComm")
        div(id="roomLog")
        input(id="playerInput")
        button(id="sendMsg") Send
  script(src="/socket.io/socket.io.js")
  script(src="/client/room.js")
