html
    link(rel="stylesheet", href="/client/game.css")
    script(src="/socket.io/socket.io.js")
    script(src="/client/game.js")
    body
        h1 Hello World!
        p Nothing to see here.
        div(id="prompt")
          div(id="screen")
          div(id="roomPrompt")
            div(class="roomInputs" id="roomName")
              span(class="inputName") Room Name:
              input(class="input" name="roomName" id="roomNameInput")
            div(class="roomInputs" id="roomPass")
              span(class="inputName") Room Pass:
              input(class="input" name="roomPass" id="roomPassInput")
            div(class="roomInputs" id="dropdown")
              span(class="inputName") Max Players:
              select(id="numOfPlayers")
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
            button(id="createRoom") Create Room
            button(id="cancelRoom") Cancel
        button(id="newRoom") new Room
        button(id="chooseName") choose name
        div(id="test") test
        p Rooms:
        ul(id="roomList")
